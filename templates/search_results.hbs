<html>
  <body>
    <center>
    <h1>Results</h1>
      {{ #if results }}
        {{ #each results }}
          <h2>{{ this.title }}</h2>
          <br>
          <h4>{{ this.description }}</h4>
          <br>
          <ul style="column-count: 3">
          {{ #each this.opinions }}
            <li style="word-wrap: break-word">{{ this }}</li>
          {{ /each }}
          </ul>
          <br>
          <a href="/session/{{ this.id }}">Play Now!</a>
          <hr>
        {{ /each }}
      {{ else }}
        <h2>No results!</h2>
      {{ /if }}
    </center>  
  </body>
</html>
